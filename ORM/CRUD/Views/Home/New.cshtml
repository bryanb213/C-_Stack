

@model Dish
<h1>Add a Dish!</h1>
<a href="Index">Home</a>

<form asp-action="AddDish" asp-controller="Home" method="post">
    <span asp-validation-for="Chef"></span>
    <label asp-for="Chef"></label>
    <input type="text" asp-for="Chef">

    <span asp-validation-for="Name"></span>
    <label asp-for="Name"></label>
    <input type="text" asp-for="Name">

    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories"></label>
    <input type="number" asp-for="Calories">


    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>

    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <textarea asp-for="Description" cols="30" rows="10"></textarea>
    <input type="submit" value="Submit">
</form>