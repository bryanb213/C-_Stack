@model Dish

<h2>Add a Dish!</h2>
<br>
<a href="/">Home</a>


<div>
<form asp-action="AddDishes" asp-controller='Home' method="post">
    <label asp-for="Name"></label>
    <input type="text" asp-for="Name">
    <br>

    <label asp-for="Calories"></label>
    <input type="number" asp-for="Calories">
    <br>

    <label asp-for="Description"></label>
    <br>
    <textarea asp-for="Description" cols="30" rows="10"></textarea>
    <br>

    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness" >
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <br>
        <label asp-for="ChefId">Chef</label>
        <select asp-for="ChefId">
            @foreach(var chef in ViewBag.Chefs){
                <option value="@chef.ChefId"> @chef.FirstName @chef.LastName</option>
            }
        </select>
        <br>
    
    <button>Add Dish</button>
</form>
</div>