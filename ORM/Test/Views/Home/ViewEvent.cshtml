@using Test.Models
@model Event

@{
    ViewData["Title"] = "Event Planner";
}


<div class="container mt-3 w-75 bg-white p-3 border rounded">
  <div class="row">
    <div class="col">
      <h1 class="h2 mr-auto">The Event of @ViewBag.ertEvent.Title</h1>
    </div>
    <div class="col text-right">
      <a href="/dashboard" role="button" class="btn btn-primary mr-2">Dashboard</a>
      <a href="/logout" role="button" class="btn btn-secondary">Log out</a>
    </div>
  </div>
  <hr>
  <h4 class="ml-3 mb-3">Event Date: @ViewBag.ertEvent.EventDate</h4>
  <div class="container">
    <div class="row">
      <div class="col-3">
        <ul class="list-group">
          <li class="list-group-item active">Event Guests:</li>
          @foreach (var guest in @ViewBag.EventGuests) {
            <li class="list-group-item">@guest.User.FirstName @guest.User.LastName</li>
          }
        </ul>
      </div>
    </div>
  </div>
</div>
